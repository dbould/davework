{
    "name": "dbould/davework",
    "description": "A framework scaffolder",
    "authors": [
        {
            "name": "Dave Bould",
            "email": "dave@bould.net",
            "homepage": "http://www.dave.codes/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "symfony/console": "^3.3",
        "symfony/process": "^3.0"
    },
    "bin": ["bin/davework"],
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "humbug/box": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Davework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit",
        "build-phar": "php vendor/bin/box build -v"
    }
}
