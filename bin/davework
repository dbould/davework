#!/usr/bin/env php
<?php
require_once __DIR__ . '/../bootstrap.php';

use Davework\Command\Slim\CreateFileCommand;
use Davework\Command\Slim\CreateProjectCommand;
use Davework\Service\CreateFileService;
use Symfony\Component\Console\Application;

$application = new Application();

$container = $app->getContainer();

//Commands
$application->add(new CreateProjectCommand());
$application->add(new CreateFileCommand($container->get(CreateFileService::class)));

$application->run();
